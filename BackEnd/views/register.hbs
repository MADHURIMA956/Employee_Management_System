    <div id="container">
       
        <h3>Create your Employee account </h3>
        <div>

            <!-- create form -->

            <form action="/register" id="myForm" method="POST">
       
                <input type="text" id="fname" class="inputClass" name="fname" outocomplete="off" placeholder="First name" >
                 <input type="text" id="lname" class="inputClass" name="lname" placeholder="Last name">
                <input type="text" id="email" class="inputClass" name="email" placeholder="Email address">
                <input type="password" id="password" class="inputClass" name="password" placeholder="Create a password">

                 <input type="submit" class="submit_btn" value="Create account" >

                <p id="account-para"> Already have an account?</p>
                <button class="submit_btn" id="sign-in"><b><a id="change-text" href="login">Sign in</a> </b></button>
        
            </form>
        </div>

    </div>




